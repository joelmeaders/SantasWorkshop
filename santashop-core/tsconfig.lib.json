/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"outDir": "../out-tsc/lib",
		"target": "es2020",
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"inlineSources": false,
		"types": [],
		"lib": ["dom", "es2018"],
	},
	"angularCompilerOptions": {
		"skipTemplateCodegen": true,
		"strictMetadataEmit": true,
		"enableResourceInlining": true,
		"enableIvy": true
	},
	"references": [
		{ "path": "santashop-models/tsconfig.lib.json", "prepend": true },
	],
	"include": ["**/*.ts", "**/*.html", "**/*.scss"],
	"exclude": ["src/test.ts", "**/*.spec.ts"]
}
