{
	"compilerOptions": {
		"module": "commonjs",
		"noEmit": false,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "dist",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"declaration": true,
    	"declarationMap": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
	},
	"compileOnSave": true,
	"include": ["src/"],
	"exclude": ["dist/"]
}
